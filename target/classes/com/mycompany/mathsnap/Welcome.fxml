<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.mathsnap.WelcomeController" prefHeight="640.0" prefWidth="480.0" style="-fx-background-color: #B3E5FC;" stylesheets="@style.css">
    <!-- Upper left image -->
    <ImageView fitWidth="250.0" fitHeight="250.0" pickOnBounds="true" preserveRatio="true"
               AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0">
        <image>
            <Image url="@imgs/design.png" />
        </image>
    </ImageView>
    <!-- Lower right image -->
    <ImageView fitWidth="250.0" fitHeight="250.0" pickOnBounds="true" preserveRatio="true"
               AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
        <image>
            <Image url="@imgs/design2.png" />
        </image>
    </ImageView>
    <VBox alignment="CENTER" spacing="40.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          prefWidth="480.0" prefHeight="640.0">
        <Text text="MathSnap: Flashcard Drills" styleClass="welcome-title" />
        <Button fx:id="startButton" text="Start" styleClass="welcome-start-btn" />
    </VBox>
</AnchorPane> 