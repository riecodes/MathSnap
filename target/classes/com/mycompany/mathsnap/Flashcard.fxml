<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="640.0" prefWidth="480.0" style="-fx-background-color: #B3E5FC;" stylesheets="@style.css">
    <VBox alignment="CENTER" spacing="24.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          prefWidth="480.0" prefHeight="640.0">
        <StackPane styleClass="flashcard-border">
            <VBox alignment="TOP_CENTER" spacing="0" prefWidth="340.0" prefHeight="480.0" styleClass="flashcard">
                <Label fx:id="operationLabel" text="Addition" styleClass="operation-label add-label" maxWidth="340.0" minHeight="60.0" alignment="CENTER" />
                <VBox alignment="CENTER" spacing="0" prefHeight="320.0" prefWidth="340.0">
                    <Text fx:id="operand1Text" text="12" styleClass="flashcard-number" />
                    <Text fx:id="operatorText" text="+" styleClass="flashcard-operator" />
                    <Text fx:id="operand2Text" text="4" styleClass="flashcard-number" />
                </VBox>
                <HBox alignment="CENTER" spacing="8.0" prefHeight="60.0" styleClass="answer-area">
                    <TextField fx:id="answerField" promptText="Your answer" styleClass="answer-input" />
                    <Button fx:id="enterButton" text="Enter" styleClass="enter-btn" />
                </HBox>
                <Text fx:id="feedbackText" text="" styleClass="feedback-text" />
            </VBox>
            <HBox alignment="TOP_RIGHT" spacing="8.0" style="-fx-padding: 8 8 0 0;">
                <Label fx:id="difficultyBadge" text="Hard" styleClass="difficulty-badge hard-badge" />
            </HBox>
        </StackPane>
        <HBox alignment="CENTER" spacing="24.0">
            <Button fx:id="backButton" text="Back" styleClass="flashcard-back-btn" />
            <Button fx:id="nextButton" text="Next" styleClass="flashcard-next-btn" />
        </HBox>
    </VBox>
</AnchorPane> 